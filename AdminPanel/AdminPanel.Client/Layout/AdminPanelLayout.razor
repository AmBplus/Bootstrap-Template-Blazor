@using AdminPanel.Client.Layout.AdminPanelComponents.Menus
@using AdminPanel.Client.Layout.AdminPanelComponents.Headers
@using AdminPanel.Client.Layout.AdminPanelComponents.Footers
@inherits LayoutComponentBase
    <!-- Layout wrapper -->
    <div class="layout-wrapper layout-content-navbar">
        <div class="layout-container">
            <!-- Menu -->
            <AdminPanelAsideMenu/>
            
            <!-- / Menu -->
            <!-- Layout container -->
            <div class="layout-page">
                <!-- Navbar -->
                <AdminPanelNavbar/>
                <!-- / Navbar -->
                <!-- Content wrapper -->
                <div class="content-wrapper">
                    <!-- Content -->
                @Body
                    <!-- / Content -->
                    <!-- Footer -->
                    <AdminPanelFooter/>
                    <!-- / Footer -->

                    <div class="content-backdrop fade"></div>
                </div>
                <!-- Content wrapper -->
            </div>
            <!-- / Layout page -->
        </div>

        <!-- Overlay -->
        <div class="layout-overlay layout-menu-toggle"></div>

        <!-- Drag Target Area To SlideIn Menu On Small Screens -->
        <div class="drag-target"></div>
    </div>
